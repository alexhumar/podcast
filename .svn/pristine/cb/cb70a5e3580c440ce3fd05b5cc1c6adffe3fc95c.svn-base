@import url("estilo2.css");

#sf_admin_content {
	float:left;
	clear:left;
	width:508px;
	color:beige;
}

#sf_fieldset_none {
	clear:both;
}

#pie{
	clear:both;
}

#sidebar {
	border-style:groove;
	border-color:#2483A6;
	margin-top: 1%;
    padding: 1%;
}

.sf_admin_td_actions {
	width:5%;	
}

#sidebar a{
	color: beige;
}

#sidebar a:hover{
	text-decoration:none;
}

.sf_admin_actions li{
	float:left;
	margin-left: 5%;
	margin-top: 2%;
}

.sf_admin_list td{
    border-color: #2483A6;
    border-style: groove;
    color: beige;
    padding: 10px 15px;
}

.sf_admin_list th{
    border-color: #2483A6;
    color:#2483A6;
    border-style: groove;
    padding: 10px 15px;
}

.sf_admin_list table{
	float:left;
	border-style:groove;
	margin-top:1%;
}

.sf_admin_list p{
	color:beige;
	width:300px;
}

.sf_admin_pagination img{
	width:5%;
}

.sf_admin_filter {
	border-style:groove;
	color: beige;
	border-color:#2483A6;
	padding:1%;
}

#subCuerpo{
	width:88%;
	height:100%;
	color:beige;
}

#subCuerpo table{
	padding-left:130px;
}

#menuV{
	float:left;
	width:18%;
	height:100%;
	background-color:#202020;
}

#cuerpo{
	width:100%;
	min-height:480px;
	height:90%;
	float:left;
}

.sf_admin_filter{
	float:right;
	padding-right:2%;
}

#footer {
	clear:both;
}


#menuV a:link, #menuV a:visited{
	display:block;
	text-align:left;
	font-family: Verdana, Arial, Helvetica, sans-serif;
	font-size: 70%;
	background-color:#B0C4DE;
	border-bottom:solid;
	border-color:#202020;
	color:black;
	text-decoration:none;
	width:100%;	
	padding-top:10%;
	padding-bottom:10%; 
}
#menuV a:hover{
	background-color: #202020;
	color:white;
	font-weight: bold;
}

#bienvenida{
	float:left;
}

.formu{
	clear:left;
	line-height:50px;
	margin:10px;
}

.cancelar{
	margin-left:20px;
}

.lista{
	clear:left;
	line-height:20px;
	margin:10px;
}

.lista a:visited, .lista a:link{
	color:blue;
}

.lista a:hover{
	color:red;
}
