@import url("estilo1.css");

#subCuerpo{
	width:88%;
	height:100%;
}

#menuV{
	float:left;
	width:15%;
	height:100%;
	background-color:#1D2F43;
}
 
#cuerpo{
	width:100%;
	min-height:42em;
	height:90%;
	float:left;
}

.sf_admin_pagination img{
	width:5%;
}

.sf_admin_filter{
	float:right;
	padding-top:5px;
}


#menuV a:link, #menuV a:visited{
	display:block;
	text-align:left;
	font-family: Verdana, Arial, Helvetica, sans-serif;
	font-size: 70%;
	background:url('images/menu_azul.png');
	color:white;
	text-decoration:none;
	width:100%;	
	padding-top:10%;
	padding-bottom:10%; 
}

#menuV a:hover {
	background:url('images/menu_select_rojo.png');
	color:white;
	font-weight: bold;
}

#bienvenida{
	float:left;
}


.formu{
	clear:left;
	line-height:50px;
	margin:10px;
}

.lista{
	clear:left;
	line-height:20px;
	margin:10px;
}

.cancelar{
	margin-left:20px;
}

.lista a:visited, .lista a:link{
	color:blue;
}

.lista a:hover{
	color:red;
}

